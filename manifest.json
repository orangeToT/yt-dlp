{
    "manifest_version": 3,
    "name": "YT-DLP Downloader",
    "version": "1.0",
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "scripting",
      "nativeMessaging"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup/popup.html"
    },
    "options_ui": {
      "page": "options/options.html",
      "open_in_tab": true
    }
  }